<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/Red"
        android:orientation="vertical"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.08"
            android:background="@color/White"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/TextView14"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="@string/str_danger_signs_mother"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/Red" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cab_background_bottom_example"
            android:orientation="vertical"
            android:padding="5dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/ImageView05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/execessive_bleeding" />

                <TextView
                    android:id="@+id/TextView13"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:text="@string/str_vaginal_bleeding"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/TextBrown" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/TextView12"
                    android:layout_width="193dp"
                    android:layout_height="match_parent"
                    android:text="@string/str_pain_calf_without_swell"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/TextBrown" />

                <ImageView
                    android:id="@+id/ImageView04"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/edema" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/ImageView03"
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/severe_headache" />

                <TextView
                    android:id="@+id/TextView11"
                    android:layout_width="176dp"
                    android:layout_height="match_parent"
                    android:text="@string/str_severe_headache_blurr_vision"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/TextBrown" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/TextView10"
                    android:layout_width="114dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.57"
                    android:text="@string/str_fever"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/TextBrown" />

                <ImageView
                    android:id="@+id/ImageView02"
                    android:layout_width="165dp"
                    android:layout_height="94dp"
                    android:src="@drawable/take_temperature" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pallor" />

                <TextView
                    android:id="@+id/TextView08"
                    android:layout_width="232dp"
                    android:layout_height="match_parent"
                    android:text="@string/str_pale_tongue_eyes"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/TextBrown" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/TextView05"
                    android:layout_width="232dp"
                    android:layout_height="match_parent"
                    android:text="@string/str_severe_adbominal_pain"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/TextBrown" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/severe_abdominal" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.00"
            android:background="@color/TakeActionCurry"
            android:divider="@drawable/divider"
            android:orientation="vertical"
            android:showDividers="middle" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="267dp"
                android:layout_height="38dp"
                android:text="@string/str_danger_signs_mother"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/Red" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="@string/str_breathing_difficulty"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/TextView0790"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="@string/str_convulsion_loss_consciousness"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/TextView09"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="@string/str_foul_smelling_discharge_vagina"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/TextView06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="@string/str_importance_cord_care"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/TextView04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="@string/str_counsel_pregnant_woman_after_baby_born"
                android:textAppearance="?android:attr/textAppearanceSmall" />
            <Button
                android:id="@+id/button_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/next"
                android:textColor="@color/TextBrown" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>