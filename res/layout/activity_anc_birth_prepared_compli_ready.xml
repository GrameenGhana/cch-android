<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/Curry"
        android:orientation="vertical"
        android:padding="10dp" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_birth_prepare_comple_readiness"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/Blue" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_help_client_compli_ready_plan"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/TextBrown" />
</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cab_background_bottom_example"
            android:orientation="vertical"
            android:padding="5dp"
            android:showDividers="end" >

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.44"
                android:src="@drawable/transport" />

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_plan_transport_for_family"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/TextBrown" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cab_background_bottom_example"
            android:orientation="vertical"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/ImageView04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3.12"
                android:src="@drawable/register_client" />

            <TextView
                android:id="@+id/TextView06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_register_for_nhis"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/TextBrown" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cab_background_bottom_example"
            android:orientation="vertical"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/ImageView03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.56"
                android:src="@drawable/go_to_health_facility" />

            <TextView
                android:id="@+id/TextView05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_go_health_facility_as_danger_signs_occurs"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/TextBrown" />

        </LinearLayout>
    </LinearLayout>

    

</ScrollView>