<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stroke_bg_curry"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Take Action: Cracked Nipples "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/Curry" />

 <LinearLayout
     android:layout_width="wrap_content"
     android:layout_height="400dp"
     android:background="@color/TakeActionCurry"
     android:divider="@drawable/divider"
     android:orientation="vertical"
     android:padding="20dp"
     android:showDividers="middle" >

           <TextView
               android:id="@+id/textView33"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:drawableLeft="@drawable/ic_counsel"
               android:paddingBottom="5dp"
               android:text="Counsel mother on how to manage cracked nipples"
               android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_counsel"
                android:text="Counsel mother on good breastfeeding practices "
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_record"
                android:paddingBottom="10dp"
                android:text="Record care given in client’s maternal health or “Red” book. "
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_follow_up"
                android:text=" Follow up with client after discharge from health center or hospital "
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>


</ScrollView>