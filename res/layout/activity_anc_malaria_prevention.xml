<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/TextView14"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_weight="0.27"
                android:text="@string/str_educate_malaria_prevention"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/Blue" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="148dp"
                android:src="@drawable/net_mother_child" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/TakeAction"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/TextView04"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.40"
                android:paddingLeft="10dp"
                android:paddingRight="1dp"
                android:text="@string/str_educate_client_keep_environment_clean"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/TextBrown" />

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.36"
                android:paddingLeft="10dp"
                android:paddingRight="1dp"
                android:text="@string/str_educate_client_on_sleeping"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/TextBrown" />

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.56"
                android:paddingLeft="10dp"
                android:paddingRight="1dp"
                android:text="@string/str_purpose_iptp_pregnancy"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/TextBrown" />

            <TextView
                android:id="@+id/TextView05"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.26"
                android:paddingLeft="10dp"
                android:paddingRight="1dp"
                android:text="@string/str_counsel_prompt_treatement"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/TextBrown" />

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.26"
                android:paddingLeft="10dp"
                android:paddingRight="1dp"
                android:text="@string/str_condom_planning_counselor"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/TextBrown" />

        </LinearLayout>

    </LinearLayout>
    

</ScrollView>
