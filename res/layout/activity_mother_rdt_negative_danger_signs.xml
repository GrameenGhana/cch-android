<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="522dp"
    android:background="@drawable/stroke_bg"
    android:orientation="vertical"
    android:padding="10dp" >

<LinearLayout
    
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.00"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/str_take_action"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/TextColorWine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/TakeAction"
                android:divider="@drawable/divider"
                android:orientation="vertical"
                android:padding="20dp"
                android:showDividers="middle" >

                <TextView
                    android:id="@+id/TextView77"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_refer"
                    android:paddingBottom="5dp"
                    android:text="@string/str_refer_to_hospital_immediately"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_phone"
                    android:paddingBottom="5dp"
                    android:text="@string/str_arrange_for_transport"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_refer"
                    android:paddingBottom="5dp"
                    android:text="@string/str_organise_blood_donor"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>

    </LinearLayout>

<TextView
    android:id="@+id/textView4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="0.00"
    android:drawableRight="@drawable/ic_transport"
    android:padding="10dp"
    android:text="While waiting for transport:   "
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:textColor="@color/Blue" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.00"
    android:background="@color/TakeAction"
    android:dividerPadding="2dp"
    android:orientation="vertical"
    android:padding="20dp"
    android:showDividers="middle" >

    <TextView
        android:id="@+id/TextView05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_2_tablet_para"
        android:textAppearance="?android:attr/textAppearanceSmall" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Take Action: Continue"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/TextColorWine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="162dp"
            android:background="@color/TakeAction"
            android:divider="@drawable/divider"
            android:orientation="vertical"
            android:padding="20dp"
            android:showDividers="middle" >

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_record"
                android:paddingBottom="10dp"
                android:text="@string/str_recotd_clinicals_in_red_book"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_accompany"
                android:paddingBottom="10dp"
                android:text="@string/str_accompany_with_relative"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
</ScrollView>