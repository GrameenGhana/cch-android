<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/module_row"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:weightSum="1.0" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_special_bullet" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.65"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"  >

        <TextView
            android:id="@+id/module_title"
            style="@style/NormalTextDark"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/TextColorWine" />

        <TextView
            android:id="@+id/module_desc"
            style="@style/SmallTextDarkItalic"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/TextColorGreen" />

    </LinearLayout>

    <Button
        android:id="@+id/action_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".35" />

</LinearLayout>